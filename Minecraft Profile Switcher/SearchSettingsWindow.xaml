<Window x:Class="Minecraft_Profile_Switcher.SearchSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CurseForge API Settings" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Resources/icon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label x:Name="QuestionLabel" Content="Enter your Eternal API Key:" HorizontalAlignment="Center" />
        <TextBox x:Name="ResponseTextBox" Text="" Grid.Row="1" HorizontalAlignment="Stretch" Height="25" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button x:Name="GetAPIKeyButton" Content="Get API Key" Click="GetAPIKeyButton_Click" Height="25" />
            <Button x:Name="OkButton" Content="OK" Click="OKButton_Click" Height="25" />
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Height="25" />
        </StackPanel>
    </Grid>
</Window>